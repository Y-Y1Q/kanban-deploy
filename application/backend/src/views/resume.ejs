<!doctype html>

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="/resume.css" />
  </head>

  <body>
    <!-- Personal Infomation Section Below -->
    <h1><%= resume.fullname %></h1>

    <div class="headerInfo"><%= resume.ai_info %></div>

    <!-- Education Section Below -->
    <div class="vertical-spacer"></div>

    <h2>Education</h2>
    <%= resume.ai_edu %>

    <!-- Skills Section Below -->
    <div class="vertical-spacer"></div>
    <h2>Skills</h2>
    <!-- Skills summary by GPT -->
    <%= resume.ai_skills %>

    <!-- Experience Section Below -->
    <div class="vertical-spacer"></div>
    <h2>Experience</h2>
    <!-- Experience summary by GPT -->
    <%= resume.ai_exp %>

    <!-- Projects Section Below -->
    <div class="vertical-spacer"></div>
    <h2>Projects</h2>
    <!-- Projects summary by GPT -->
    <%= resume.ai_proj %>

    <script>
      // Wait until the page is fully loaded, then trigger print dialog
      window.addEventListener("load", function () {
        window.print();
      });
    </script>
  </body>
</html>
