{
  "name": "backend",
  "version": "1.0.0",
  "description": "CSC648-01-FA24-Team01-Backend",
  "type": "module",
  "scripts": {
    "start": "node ./dist/server.js",
    "build": "node esbuild.js",
    "dev": "concurrently --names \"BUILD,SERVER\" -c \"blue,green\" \"npm:dev:build\"  \"npm:dev:server\"",
    "dev:build": "NODE_ENV=development node esbuild.js --watch",
    "dev:server": "NODE_ENV=development nodemon ./dist/server.js",
    "test": "jest",
    "db": "tsx ./src/db/db_reset.ts && npm run db:migrate",
    "db:migrate": "node-pg-migrate -m \"./src/db/migrations\" -j sql up",
    "db:rollback": "node-pg-migrate -m \"./src/db/migrations\" -j sql down",
    "db:create": "node-pg-migrate -m \"./src/db/migrations\" -j sql create",
    "format": "prettier . --write"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "connect-pg-simple": "^10.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-session": "^1.18.1",
    "morgan": "^1.10.0",
    "node-pg-migrate": "^7.7.1",
    "pg": "^8.13.0",
    "pg-promise": "^11.10.1",
    "sql-template-strings": "^2.2.2",
    "validator": "^13.12.0"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/connect-pg-simple": "^7.0.3",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/jest": "^29.5.13",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.7.6",
    "@types/pg": "^8.11.10",
    "@types/validator": "^13.12.2",
    "concurrently": "^9.0.1",
    "esbuild": "^0.24.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3",
    "prettier-plugin-embed": "^0.4.15",
    "prettier-plugin-sort-json": "^4.0.0",
    "prettier-plugin-sql": "^0.18.1",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3"
  },
  "nodemonConfig": {
    "ext": "ts,js",
    "ignore": [
      "./dist/*.map"
    ]
  },
  "optionalDependencies": {
    "win-node-env": "^0.6.1"
  }
}
